//- module
#landing
  position: relative
  width: 100%
  height: 100%
  overflow: hidden
  border-bottom: 4px solid g0v-red
  .dark-shape
    z-index: 0
    position: absolute
    width: 1000px
    height: 200%
    background: #222
    border-right: 24px solid #c42026
    top: 0
    transform: rotate(15deg)
    top: -250px
    left: -600px
    background-size: cover
    &:after
      content: " "
      display: block
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      background: rgba(0,0,0,.5)
  .lang
    position: absolute
    top: 10px
    right: 10px
    height: 20px
    font-size: 14px
  .thumb img
    position: relative
    z-index: 1
    margin: 20px
    box-shadow: 0 0 0 1px rgba(0,0,0,.3),8px 8px 0 0 rgba(0,0,0,.8)
    mix-blend-mode: normal
    border: 4px solid #fff
  .content
    width: 1024px
    margin: auto
    position: absolute
    top: 50%
    left: 50%
    transform: translate(-50%,-50%)
  .desc img, .desc canvas
      margin: 100px auto 20px auto
      width: 300px
      display: block

.sticky a.clickable
  margin-bottom: 0.25rem
  white-space: nowrap
  word-break: keep-all

@media(max-width:1200px)
  #landing
    .dark-shape
      left: -800px

@media(max-width:1024px)
  #landing
    .dark-shape
      display: none
    .thumb
      display: none
    .content
      max-width: 800px
      width: 90%
      .desc img
        margin: 20px auto
